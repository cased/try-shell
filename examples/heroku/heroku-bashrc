# Create and enter a temporary directory
dir=$HOME/$$
mkdir -p $dir
cd $dir

# Clean it up when we're done
trap "rm -rf $dir" EXIT

# Tell all other programs (like the Heroku CLI) that this temp directory is our home
export HOME=$dir

# Interactive login required when IPs don't match
# https://devcenter.heroku.com/changelog-items/1873
heroku login -i